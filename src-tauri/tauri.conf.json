{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devPath": "../WebClients/applications/drive/dist",
    "distDir": "../WebClients/applications/drive/dist"
  },
  "package": {
    "productName": "Proton Drive",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": true
    },
    "bundle": {
      "active": true,
      "targets": ["deb"],
      "identifier": "com.proton.drive",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": [],
      "copyright": "ProtonMail AG",
      "category": "Productivity",
      "shortDescription": "Encrypted cloud storage",
      "longDescription": "Proton Drive is encrypted cloud storage that protects your files with end-to-end encryption.",
      "deb": {
        "depends": []
      },
      "rpm": {
        "license": "AGPL-3.0"
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Proton Drive",
        "url": "https://drive.proton.me",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ]
  }
}
